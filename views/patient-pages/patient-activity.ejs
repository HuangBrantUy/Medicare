<div class="activity-wrapper">
    <div class="activity-topbar fixed-top">
        <div class="activity-bar d-flex align-items-center">
            <div class="bar-container d-flex justify-content-between align-items-center">
                <span class="title-activity">Activity</span>
                <a class="history" href="/">History</a>
            </div>
        </div>
        <div class="activity-nav">
            <ul class="nav nav-pills" id="pills-tab" role="tablist">
                <li class="pending nav-item" role="presentation">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pending-tab" role="tab" aria-controls="pills-home" aria-selected="true">Pending</a>
                </li>
                <li class="confirmed nav-item" role="presentation">
                    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#confirmed-tab" role="tab" aria-controls="pills-contact" aria-selected="false">Confirmed</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content" id="pills-tabContent">


        <% requests.forEach(request=> { %>
            <% if (request.user_id==user_id && !request.status){ %>
                <% doctors.forEach(doctor=> { %>
                    <% if (request.doctor_id==doctor._id){ %>
                        <div class="tab-pane fade show active" id="pending-tab" role="tabpanel" aria-labelledby="pills-home-tab">
                            <div class="booked-activity">
                                <a class="booked-link d-flex justify-content-center" href="/view-doctor/<%= doctor._id %>">
                                    <div class="booked-card">
                                        <div class="booked-header d-flex align-items-center">
                                            <h5 class="booked-id">Booking ID #1031</h5>
                                            <img src="/images/right-arrow@20px.svg">
                                        </div>
                                        <div class="booked-body">
                                            <div class="booked-doctor">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-md"></i>
                                                    <h6 class="doc-name">Dr. <%= doctor.firstName%> <%= doctor.lastName %></h6>
                                                </div>
                                                <span class="booked-specialization">Psychiatrist</span>
                                            </div>
                                            <div class="booked-sched d-flex align-items-center">
                                                <i class="fas fa-calendar-day"></i>
                                                <h6 class="date-time"><%= request.appointment_time%>, <%= request.appointment_date%></h6>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
            <% } %>
        <% }) %>

        
        <div class="tab-pane fade" id="confirmed-tab" role="tabpanel" aria-labelledby="pills-contact-tab">
            <% requests.forEach(request=> { %>
                <% if (request.user_id==user_id && request.status){ %>
                    <% doctors.forEach(doctor=> { %>
                        <% if (request.doctor_id==doctor._id){ %>
                            <div class="tab-pane fade show active" id="pending-tab" role="tabpanel" aria-labelledby="pills-home-tab">
                                <div class="booked-activity">
                                    <a class="booked-link d-flex justify-content-center" href="/view-doctor/<%= doctor._id %>">
                                        <div class="booked-card">
                                            <div class="booked-header d-flex align-items-center">
                                                <h5 class="booked-id">Booking ID #1031</h5>
                                                <img src="/images/right-arrow@20px.svg">
                                            </div>
                                            <div class="booked-body">
                                                <div class="booked-doctor">
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-user-md"></i>
                                                        <h6 class="doc-name">Dr. <%= doctor.firstName%> <%= doctor.lastName%></h6>
                                                    </div>
                                                    <span class="booked-specialization">Psychiatrist</span>
                                                </div>
                                                <div class="booked-sched d-flex align-items-center">
                                                    <i class="fas fa-calendar-day"></i>
                                                    <h6 class="date-time"><%= request.appointment_time%>, <%= request.appointment_date%></h6>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                <% } %>
            <% }) %>
        </div>
    </div>
</div>
<%- include('../partials/patient-navbar.ejs') %>