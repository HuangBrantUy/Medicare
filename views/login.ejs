<div class="login-wrapper">
    <div class="container d-flex justify-content-center align-items-center">
        <a href="/"><img id="logo" src="/images/logo.png" alt="" height="48px"></a>
        <form id="login-form">
            <div class="form-group" id="login-email">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="form-group" id="login-password">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <button type="submit" class="btn btn-primary" id="login-btn">Log In</button>
            <div id="signup-btn">
                <a href="/">Sign Up</a>
            </div>
        </form>
        <div id="forgotpass-btn">
            <a href="/">Forgot Password</a>
        </div>
    </div>
</div>